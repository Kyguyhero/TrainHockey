<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/gradient">

    <!-- 1) Your existing horizontal block, height=wrap_content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Exercise Name and Description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/exerciseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:hint="Exercise Name:"
                android:textColorHint="@color/white"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/exerciseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Reps and Sets -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <EditText
                android:id="@+id/repsInput"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="@string/reps"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:gravity="center"/>

            <EditText
                android:id="@+id/setsInput"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="@string/sets"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 2) Spacer fills all the empty middle space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- 3) Your logo just above the nav bar -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="236dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/thlogo2" />

    <!-- 4) Nav bar pinned to the bottom -->
    <include
        android:id="@+id/navBar"
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
