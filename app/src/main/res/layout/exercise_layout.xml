<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/gradient">

    <!-- Exercise Name -->
    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <!-- Exercise Description -->
    <TextView
        android:id="@+id/exerciseDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end">

        <!-- Only visible to coach -->
        <ImageButton
            android:id="@+id/editRepsSetsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Reps/Sets"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Only visible to player -->
        <CheckBox
            android:id="@+id/completeCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Exercise Details Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Name and Description -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/exerciseNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:hint="Exercise Name:"
                android:textColorHint="@color/white"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/exerciseDescriptionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Reps and Sets -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <EditText
                android:id="@+id/repsInput"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="@string/reps"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:gravity="center" />

            <EditText
                android:id="@+id/setsInput"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="@string/sets"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="236dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/thlogo2" />

    <!-- Nav Bar -->
    <include
        android:id="@+id/navBar"
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
