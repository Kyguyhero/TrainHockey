<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title of the page -->
    <TextView
        android:id="@+id/workoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_workout_schedule"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- TableLayout to show the days of the week and the workout -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1">

        <!-- Header row with day names -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mon"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tue"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wed"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/thu"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fri"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sat"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sun"
                android:gravity="center"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row for the workout details (initially empty, to be updated) -->
        <TableRow>

            <TextView
                android:id="@+id/workoutMon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutTue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutWed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutFri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutSat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
            <TextView
                android:id="@+id/workoutSun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Workout"
                android:gravity="center" />
        </TableRow>
        <TextView
            android:id="@+id/goalDisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No goal set"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"

            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:elevation="4dp" />

        <EditText
            android:id="@+id/goalEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set today's goal"
            android:inputType="text"
            android:visibility="gone" />

        <Button
            android:id="@+id/saveGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Goal"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/editGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:layout_marginTop="8dp" />

        <!-- On-Ice Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On-Ice Exercises"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/onIceTodayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <!-- Off-Ice Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off-Ice Exercises"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/offIceTodayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

    </TableLayout>


    <!-- Buttons section, placed at the bottom just above the navigation bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/createWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Workout"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/saveWorkoutButton"
            android:text="Save Workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />


        <!-- Button to view previous workouts -->
        <Button
            android:id="@+id/previousWorkoutsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_previous_workouts"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@color/white" />

        <!-- Button to go back -->



    </LinearLayout>

</LinearLayout>