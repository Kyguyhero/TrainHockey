<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->

        <TextView
            android:id="@+id/workoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />


        <!-- Weekday selection -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/workoutMon"
                    android:text="Mon"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutTue"
                    android:text="Tue"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutWed"
                    android:text="Wed"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutThu"
                    android:text="Thu"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutFri"
                    android:text="Fri"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutSat"
                    android:text="Sat"
                    style="@style/DayButton" />

                <TextView android:id="@+id/workoutSun"
                    android:text="Sun"
                    style="@style/DayButton" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Goal display/edit -->
        <TextView
            android:id="@+id/goalDisplayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No goal set"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/goalEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Set today's goal"
            android:inputType="text"
            android:visibility="gone" />

        <Button
            android:id="@+id/saveGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Goal"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/editGoalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:layout_marginTop="8dp" />

        <!-- On-Ice Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On-Ice Exercises"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/onIceTodayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/addOnIceExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add On-Ice Exercise"
            android:layout_marginTop="8dp"
            android:layout_gravity="start" />

        <!-- Off-Ice Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off-Ice Exercises"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/offIceTodayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/addOffIceExerciseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Off-Ice Exercise"
            android:layout_marginTop="8dp"
            android:layout_gravity="start" />

        <!-- Bottom Buttons -->
        <Button
            android:id="@+id/saveWorkoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Workout"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/previousWorkoutsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Previous Workouts"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
