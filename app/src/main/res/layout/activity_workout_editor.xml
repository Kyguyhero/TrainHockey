<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".WorkoutEditorActivity">

    <!-- Selected Date Display -->
    <TextView
        android:id="@+id/workoutDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- On-Ice Training Section -->
    <TextView
        android:id="@+id/onIceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_ice_training"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/addOnIceExerciseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_exercise" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/onIceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:nestedScrollingEnabled="false" />

    <!-- Off-Ice Training Section -->
    <TextView
        android:id="@+id/offIceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/off_ice_training"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/addOffIceExerciseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_exercise" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offIceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:nestedScrollingEnabled="false" />

    <!-- Save Workout Button -->
    <Button
        android:id="@+id/saveWorkoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_exercise"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
