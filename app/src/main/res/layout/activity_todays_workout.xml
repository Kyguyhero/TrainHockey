<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TodaysWorkoutActivity">

    <TextView
        android:id="@+id/workoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Workout"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"/>

    <Button
        android:id="@+id/setGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Goal"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/onIceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-Ice Workouts"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"/>

    <ListView
        android:id="@+id/onIceWorkoutsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/offIceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off-Ice Workouts"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="8dp"/>

    <ListView
        android:id="@+id/offIceWorkoutsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>
