<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black"
    tools:context=".TodaysWorkoutActivity">

    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigationBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workoutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Workout"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingBottom="8dp"/>

            <Button
                android:id="@+id/setGoalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Goal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/onIceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On-Ice Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingTop="8dp"/>

            <ListView
                android:id="@+id/onIceWorkoutsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/offIceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off-Ice Workouts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingTop="8dp"/>

            <ListView
                android:id="@+id/offIceWorkoutsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        android:id="@+id/navigationBar"
        layout="@layout/nav_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
